@page "/Config/Resources/{resourceguid}"
@using LSSD.Bookings

@code {
    [Inject]
    ResourceService _repo {get;set;}

    [Parameter]
    public string resourceguid {get;set;}
}

<h1>Edit Resource</h1>
<div style="width: 80%; margin-left: auto; margin-right: auto;">

@if (!string.IsNullOrEmpty(resourceguid)) {
    Resource resource = _repo.Get(resourceguid);
    if (resource != null) {
        <WebFrontend.Components.EditResourceComponent Resource="@resource" BackRoute="/Config/Resources/" />
    } else {
        <p>Resource not found.</p>
    }
} else {
    <p>Resource not found (empty).</p>
}

</div>